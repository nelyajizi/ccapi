{
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/example/build"
            },
            "command": "/usr/bin/cmake",
            "args": [
                "..",
                "-D",
                "CMAKE_BUILD_TYPE:STRING=Debug"
            ]
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/example/build"
            },
            "dependsOn": [
                "cmake"
            ]
        },
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "cmake",
            "args": [
				"--build",
				".",
				"--target",
				"${relativeFileDirname}"
			],
            "options": {
                "cwd": "${workspaceFolder}/example/build"
            },
            "dependsOn": ["make"],
        }
    ],
    "version": "2.0.0"
}